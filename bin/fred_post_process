#!/usr/bin/perl
use strict;
use warnings;
use Env;
$| = 1;  # AUTO_FLUSH

# File: fred_post_process
# Author: John Grefenstette
# Created: Aug 07, 2012

my ($out, $tables, $reports) = @ARGV;
$out = "OUT" if not $out;
die "fred_post_process: $out not found\n" if not -d $out;
$tables = "TABLES" if not $tables;
mkdir $tables if not -d $tables;
die "fred_post_process: $tables not found\n" if not -d $tables;
$reports = "REPORTS" if not $reports;
mkdir $reports if not -d $reports;
die "fred_post_process: $reports not found\n" if not -d $reports;

my $FRED = $ENV{FRED_HOME};
die "fred_post_process: Please set environmental variable FRED_HOME to location of FRED home directory\n" if not $FRED;

# create daily table for each variable
system "$FRED/bin/fred_get_daily_tables $out $tables";

# get weekly tables
system "$FRED/bin/fred_get_weekly_tables $tables";

# process tables

# get the list of files
my $filelist = `ls $tables/0/*`;
chomp $filelist;
my @files = split " ", $filelist;
# print "|@files|\n";

# get the list of variables
my %vars = ();
for my $file (@files) {
  next if ($file !~ /daily/);
  my ($var) = ($file =~/.*\/(.*)_daily-\d+\.txt/);
  $vars{$var} = 1;
}

for my $key (sort keys %vars) {
  # loop over all strains
  my $strain = 0;
  my $dir = "$tables/$strain";
  while (-d $dir) {
    system "$FRED/bin/fred_get_stats 4 $dir/$key\_daily-*.txt > $reports/$key\_daily-$strain.dat";
    system "$FRED/bin/fred_get_stats 5 $dir/$key\_weekly-*.txt > $reports/$key\_weekly-$strain.dat";
    $strain++;
    $dir = "$tables/$strain";
  }
}






  
