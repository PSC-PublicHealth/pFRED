#!/usr/bin/perl
use strict;
use warnings;
use Env;

my $FRED = $ENV{FRED_HOME};
die "Please set environmental variable FRED_HOME to location of FRED source directory\n" if not $FRED;

my $bindir = "$FRED/bin";

my @args = @ARGV;
my ($key) = $args[0];
die "usage: fred_AR key\n" if not $key;

my $id = `$bindir/get_id $key`;
chomp $id;
die "fred_AR: UNKNOWN key: $key\n" if $id eq "UNKNOWN";

my $status = `$bindir/get_status $key`;
chomp $status;
$status =~ s/\s.*//;
die "fred_AR: bad status: $status\n" if $status ne "FINISHED";

my $reportsdir = "$FRED/RESULTS/EXP/$id/DATA/REPORTS";
my $outdir = "$FRED/RESULTS/EXP/$id/DATA/OUT";

chdir $reportsdir or die "Can't find REPORTS directory: $reportsdir\n";

system "$bindir/stats $outdir/out* > stats.out";

my $x = "AR";
my $AR = "";
open OUT, ">$x.dat";
open IN, "stats.out";
while (my $line = <IN>) {
  my @a = split " ", $line;
  for my $i (0..$#a) {
    if ($a[$i] eq $x) {
      $AR = "$a[$i+1] $a[$i+2]\n";
      last;
    }
  }
}
close IN;
close OUT;
print "$AR";

